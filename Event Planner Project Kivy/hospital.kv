#:kivy 2.2.0
#:import dp kivy.metrics.dp

<RootView>:
    ScreenManager:
        id: screen_manager
        DashboardScreen:
            name: "dashboard"

    MDNavigationDrawer:
        id: nav_drawer
        MDBoxLayout:
            orientation: "vertical"
            padding: dp(12)

            MDLabel:
                text: "Hospital"
                font_style: "H5"
                size_hint_y: None
                height: self.texture_size[1] + dp(10)

            MDList:
                OneLineListItem:
                    text: "Dashboard"
                    on_release:
                        root.ids.screen_manager.current = "dashboard"
                        root.ids.nav_drawer.set_state("close")

<DashboardScreen>:
    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "Dashboard"
            left_action_items: [["menu", lambda x: app.root.ids.nav_drawer.set_state("toggle")]]

        MDLabel:
            text: "Frontend OK"
            halign: "center"
